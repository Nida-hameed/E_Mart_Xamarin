<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="E_Mart.Views.Shopkeeper.Add_SHOP"
             Title="New Shop">
    <ContentPage.Content>
        <StackLayout Padding="24">

            <Image Source="ImagePicker.png" x:Name="PreviewPic"  >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                </Image.GestureRecognizers>
            </Image>
            
            <Entry x:Name="txtShopName" Placeholder="Category Name" Keyboard="Chat"></Entry>
            <Entry x:Name="txtShopAddress" Placeholder="Category Status" Keyboard="Chat"></Entry>
            <Entry x:Name="txtShopCatFID" Placeholder="Category Status" Keyboard="Chat"></Entry>
            <Entry x:Name="txtCityFID" Placeholder="Category Status" Keyboard="Chat"></Entry>
            <Entry x:Name="txtShopkeeperFID" Placeholder="Category Status" Keyboard="Chat"></Entry>
            <Entry x:Name="txtShopRent" Placeholder="Category Status" Keyboard="Chat"></Entry>

            <ActivityIndicator x:Name="ProgressInd" IsRunning="False"/>
            <Button Text="Add Shop" x:Name="btnAddShop" Clicked="btnAddShop_Clicked" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>